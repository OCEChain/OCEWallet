<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:paddingLeft="16dp"
    android:paddingRight="16dp"
    android:layout_height="48dp">

    <TextView
        android:id="@+id/tv_of_digital_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/iv_of_digital_currency"
        android:layout_marginTop="8dp"
        android:textColor="#636367"
        android:textSize="14sp"
        android:text="@string/invite_friends"/>

    <TextView
        android:id="@+id/tv_of_date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@id/tv_of_digital_name"
        android:layout_below="@id/tv_of_digital_name"
        android:textColor="#959699"
        android:textSize="12sp"
        android:text="@string/sample_date"/>

    <TextView
        android:id="@+id/tv_of_num"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:textColor="#636367"
        android:textSize="12sp"
        android:text="+2"/>

    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:layout_alignParentBottom="true"
        android:background="#d4d6dc"/>

</RelativeLayout>