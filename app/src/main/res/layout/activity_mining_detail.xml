<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_mining_detail"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.idea.jgw.ui.mining.MiningHashrateActivity">

    <ImageView
        android:id="@+id/iv_of_banner"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@mipmap/banner"/>

    <include layout="@layout/layout_of_transparent_bgl_title" />

    <ImageView
        android:id="@+id/iv_digital_logo"
        android:layout_width="29dp"
        android:layout_height="29dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="58dp"
        android:src="@mipmap/icon_btc_small"/>

    <TextView
        android:id="@+id/tv_balance_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="6dp"
        android:layout_below="@id/iv_digital_logo"
        android:textColor="@color/white"
        android:textSize="12sp"
        android:text="@string/balance"/>

    <TextView
        android:id="@+id/tv_digital_value"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="116dp"
        android:textColor="@color/white"
        android:textSize="19sp"
        android:text="@string/sample_balance"/>

    <TextView
        android:id="@+id/tv_cny_value"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="136dp"
        android:textColor="@color/white"
        android:textSize="14sp"
        android:text="@string/sample_balance"/>
    
    <Button
        android:id="@+id/btn_digital_description"
        android:layout_width="63dp"
        android:layout_height="20dp"
        android:layout_marginTop="58dp"
        android:layout_alignParentRight="true"
        android:textColor="@color/white"
        android:textSize="14sp"
        android:text="@string/digital_des"
        android:background="@mipmap/icon_digital_des"/>

    <Button
        android:id="@+id/btn_of_send"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:text="@string/send"
        android:gravity="center"
        android:textSize="14sp"
        android:textColor="@color/white"
        android:layout_alignParentBottom="true"
        android:background="@drawable/selector_of_blue_button"/>

    <com.jcodecraeer.xrecyclerview.XRecyclerView
        android:id="@+id/rv_of_detail_mining"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/iv_of_banner"
        android:layout_above="@id/btn_of_send"
        android:background="@color/white"/>

</RelativeLayout>
