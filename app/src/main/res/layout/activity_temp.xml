<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:gravity="center"
    android:layout_height="match_parent">

    <Button
        android:id="@+id/wallet_sign"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="钱包签名测试"/>

    <Button
        android:id="@+id/write_key"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="写入秘钥"/>

    <Button
        android:id="@+id/private_key_sign"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="秘钥签名"/>

    <Button
        android:id="@+id/write_pin"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="写入PIN"/>

    <Button
        android:id="@+id/write_pin2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="写入PIN2"/>

    <Button
        android:id="@+id/finger_test"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="指纹测试"/>

    <Button
        android:id="@+id/ic_sign_test"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="IC签名测试"/>

    <Button
        android:id="@+id/ic_version_test"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="版本号测试"/>

</LinearLayout>