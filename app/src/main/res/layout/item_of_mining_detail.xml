<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:paddingLeft="16dp"
    android:paddingRight="16dp"
    android:layout_height="48dp">

    <TextView
        android:id="@+id/tv_of_mining_num"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_below="@id/tv_of_digital_name"
        android:textColor="#636367"
        android:textSize="12sp"
        android:text="+23.0332"/>

    <TextView
        android:id="@+id/tv_of_mining_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_alignParentRight="true"
        android:textColor="#959699"
        android:textSize="12sp"
        android:text="@string/sample_date_time"/>

    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:layout_alignParentBottom="true"
        android:background="#d4d6dc"/>

</RelativeLayout>