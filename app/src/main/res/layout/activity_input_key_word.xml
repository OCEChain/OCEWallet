<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_copy_key_words"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <include layout="@layout/layout_of_normal_title" />

    <TextView
        android:id="@+id/tv_of_create_step"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="40dp"
        android:layout_gravity="center_horizontal"
        android:textColor="#193fc3"
        android:textSize="14sp"
        android:text="@string/check_key_word"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="14dp"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        android:text="@string/input_key_word_description"
        android:textColor="#636467"
        android:textSize="12sp"/>

    <EditText
        android:id="@+id/et_input_key_words"
        android:layout_width="match_parent"
        android:layout_height="125dp"
        android:layout_marginTop="32dp"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        android:padding="16dp"
        android:textColor="#636467"
        android:textSize="16sp"
        android:background="@mipmap/bg_key_words_input"/>

    <Space
        android:layout_width="1dp"
        android:layout_height="1dp"
        android:layout_weight="1"/>

    <Button
        android:id="@+id/btn_load"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:textSize="14sp"
        android:textColor="#193fc3"
        android:gravity="center"
        android:text="@string/load"
        android:background="@mipmap/bg_restore_key_word"/>

    <Space
        android:layout_width="1dp"
        android:layout_height="60dp"
        android:layout_weight="0"/>

</LinearLayout>
